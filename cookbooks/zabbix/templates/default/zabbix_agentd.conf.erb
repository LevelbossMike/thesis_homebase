# Generated by Chef
Hostname=<%= @node[:node_name] %>
LogFile=<%= node.zabbix.agent.log_dir %>/zabbix_agentd.log
DebugLevel=3
EnableRemoteCommands=1
LogRemoteCommands=1
Include=/etc/zabbix/include
PidFile=/tmp/zabbix_agentd.pid
Server=<%= @server_ips.join(',') %>
StartAgents=4
<%- if node[:zabbix][:agent][:unsafe_user_parameters] -%>
UnsafeUserParameters=1
<%- end -%>
<%- if node[:zabbix][:agent][:user_parameters] -%>
<%- node[:zabbix][:agent][:user_parameters].each_pair do |name, value| -%>
UserParameter=<%= name %>,<%= value %>
<%- end -%>
<%- end -%>
